@{
    bool isAuthenticated = User.Identity.IsAuthenticated;
}

@if (ViewContext.RouteData.Values["Action"].ToString().Equals("ListOrders"))
{
    <div class="d-grid gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Administration" asp-action="ListOrders" asp-route-projectType="">View All</a>
        <!-- This is a FOR loop that gets every item based on project type -->
        @foreach (string transactionType in Model ?? Enumerable.Empty<string>())
        {
            <!-- Create a button for each specific project type -->
            <a class="btn @(transactionType == ViewBag.SelectedTransactionType ? "btn-primary" : "btn-outline-secondary")" asp-controller="Administration" asp-action="ListOrders" asp-route-projectType="@transactionType" asp-route-pageNum="1">@transactionType</a>
        }
    </div>
}