@{
}

@if (ViewContext.RouteData.Values["Action"].ToString().Equals("Shop"))
{
    <div class="d-grid gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Shop" asp-route-legoColor="">View All</a>
        <!-- This is a FOR loop that gets every item based on project type -->
        @foreach (string legoColor in Model ?? Enumerable.Empty<string>())
        {
            <!-- Create a button for each specific project type -->
            <a class="btn @(legoColor == ViewBag.SelectedLegoColor ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Shop" asp-route-legoColor="@legoColor" asp-route-pageNum="1" asp-route-pageSize="">@legoColor</a>
        }
    </div>
}