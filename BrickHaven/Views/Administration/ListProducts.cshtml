                <div class="card-footer">

                    <form method="post" asp-action="DeleteProduct" asp-route-UserId="@product.ProductId" onsubmit="return confirmDelete()">
                        <a asp-controller="Administration" asp-action="EditProduct" asp-route-UserId="@product.ProductId" class="btn btn-primary">Edit</a>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
