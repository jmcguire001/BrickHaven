@model ListProductsViewModel 

@{
    ViewBag.Title = "All Products";
}

<h1>All Products</h1>

<div><vc:lego-types /></div>

<div page-model="@Model.PaginationInfo" page-action="ListProducts" page-class-enabled="true"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-class="btn"
     page-url-legoType="Model.Category" page-url-pageSize="@Model.CurrentPageSize" class="btn-group pull-right m-1">
</div>


<a asp-action="CreateProduct" asp-controller="Administration" class="btn btn-primary mb-3" style="width:auto">Add New Product</a>

@if (!Model.Products.Any())
{
    <p>There are no products in the database</p>
}
else
{
    <div class="container">
        @foreach (var product in Model.Products)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Product Id : @product.ProductId
                </div>
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                </div>
                <div class="card-footer">

                    <form method="post" asp-action="DeleteProduct" asp-route-ProductId="@product.ProductId" onsubmit="return confirmDelete()">
                        <a asp-controller="Administration" asp-action="EditProduct" asp-route-ProductId="@product.ProductId" class="btn btn-primary">Edit</a>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
}

<script>
    function confirmDelete() {
        // Display an alert box asking the user if they want to delete
        var confirmation = window.confirm("Are you sure you want to delete this product?");

        // Return the result of the confirmation (true if user clicks OK, false if Cancel)
        return confirmation;
    }
</script>