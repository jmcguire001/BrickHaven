@model ListOrdersViewModel

@{
    ViewBag.Title = "All Orders";
}

<h1>All Products</h1>

<div><vc:order-types /></div>

<div page-model="@Model.PaginationInfo" page-action="ListOrders" page-class-enabled="true"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-class="btn"
     page-url-transactionType="Model.TransactionType" page-url-pageSize="@Model.CurrentPageSize" class="btn-group pull-right m-1">
</div>

<a asp-action="CreateOrder" asp-controller="Administration" class="btn btn-primary mb-3" style="width:auto">Add New Order</a>

@if (!Model.Orders.Any())
{
    <p>There are no orders in the database</p>
}
else
{
    <div class="container">
        @foreach (var order in Model.Orders)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Transaction Id: @order.TransactionId
                </div>
                <div class="card-body">
                    <h5 class="card-title">User ID: @order.UserId</h5>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Order Date: @order.Date</h5>
                </div>
                <div class="card-footer">

                    <form method="post" asp-action="DeleteOrder" asp-route-TransactionId="@order.TransactionId" onsubmit="return confirmDelete()">
                        <a asp-controller="Administration" asp-action="EditOrder" asp-route-TransactionId="@order.TransactionId" class="btn btn-primary">Edit</a>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
}

<script>
    function confirmDelete() {
        // Display an alert box asking the user if they want to delete
        var confirmation = window.confirm("Are you sure you want to delete this order?");

        // Return the result of the confirmation (true if user clicks OK, false if Cancel)
        return confirmation;
    }
</script>